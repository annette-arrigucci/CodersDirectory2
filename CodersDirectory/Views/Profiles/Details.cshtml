@model ProfileDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @if (Model.PhotoUrl != null)
        {
            <img src="@Url.Content(Model.PhotoUrl)" style="width: 100%; max-width: 200px; float: left; padding: 20px 20px 20px 0;" />
        }

        <h1 style="margin-bottom: 20px;">
            @Model.FirstName
            @Html.Raw(" ")
            @Model.LastName
        </h1>
        @if (Model.LanguageNames != null)
        {
            <p>
                <b>Primary Languages/Frameworks: </b>
            </p>
            <p>
                @for (int i = 0; i < Model.LanguageNames.Count; i++)
                {
                    @Html.Raw(Model.LanguageNames[i])
                    if (i != Model.LanguageNames.Count - 1)
                    {
                        @Html.Raw(", ")
                    }
                }
            </p>
        }

        @if (Model.LocationString != null)
        {
            <p><b>Location: </b></p>
            <p>@Model.LocationString</p>
        }
        <div style="clear: left;">
            @if (Model.About != null)
            {
                <p><b>About Me: </b></p>
                <pre>@Model.About</pre>
            }
            @if (Model.Goal != null)
            {
                <p><b>Coding goal: </b></p>
                <pre>@Model.Goal</pre>
            }
            @if (Model.Resources != null)
            {
                <p><b>Favorite resources for learning to code: </b></p>
                <pre>@Model.Resources</pre>
            }
            @if (Model.ContactEmail != null)
            {
                <p><b>Email: </b></p>
                <p><a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a></p>
            }
            @if (Model.LinkedInUrl != null)
            {
                <p><b>LinkedIn: </b></p>
                <p><a href="@Model.LinkedInUrl" target="_blank">@Model.LinkedInUrl</a></p>
            }
            @if (Model.GitHubUrl != null)
            {
                <p><b>GitHub: </b></p>
                <p><a href="@Model.GitHubUrl" target="_blank">@Model.GitHubUrl</a></p>
            }
            @if (Model.WebsiteUrl != null)
            {
                <p><b>Portfolio website: </b></p>
                <p><a href="@Model.WebsiteUrl" target="_blank">@Model.WebsiteUrl</a></p>
            }
        </div>
    </div>
    <div class="col-md-1">
        @if (Model.ProfileInUserFavorites == false)
        {
            @using (Html.BeginForm("AddProfileToFavorites", "Profiles", new { id = Model.Id }))
            {

                <input type="submit" value="Add Profile To Favorites" class="btn btn-primary" style="margin-top: 20px;" />
            }
        }
        else
        {
            @using (Html.BeginForm("RemoveProfileFromFavorites", "Profiles", new { id = Model.Id }))
            {
                <input type="submit" value="Remove Profile From Favorites" class="btn btn-primary" style="margin-top: 20px;" />
            }
        }
    </div>
</div>

@section Styles
    {
    <style type="text/css">
        pre {
            border: none;
            margin: 0 0 10px;
            padding: 0;
            background-color: white;
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
            font-size: 14px;
            max-width: 100%;
            max-height: 500px;
            overflow: auto;
            white-space: pre-wrap;
        }
    </style>
}